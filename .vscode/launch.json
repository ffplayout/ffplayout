    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch ffplayout service",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/ffplayout",
            "args": [
                "-l",
                "0.0.0.0:8787"
            ],
            "cwd": "${workspaceFolder}/target/debug/",
            "sourceLanguages": [
                "rust"
            ],
            // "preLaunchTask": "rust: cargo build",
        },
        {   
            "name": "Config Setter - S3 Storage",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/ffplayout",
            "args": [
                "-i",
                "-u",
                "admin",
                "-p",
                "admin",
                "-m",
                "contact@example.com",
                "--storage",
                // "s3://media01/:localhost:9000/:123minio/:123minoi", // mine
                // "s3://worker/:hotconvert1.localdomain:9000/:WvLdvFlf4Utxx0UZ/:AQSYGjqnGCojB0eBDU8HJA0GVEGZfvyV", // for hotconvert
                "s3://aparat-music/:192.168.21.20:8084/:homer/:donuts", // for filimo
                "--playlists",
                "./playlists",
                "--public",
                "./public",
                "--logs",
                "./logging"
            ],
            "cwd": "${workspaceFolder}/target/debug/",
            // "preLaunchTask": "rust : cargo build",
            "stopOnEntry": false,
            "sourceLanguages": [
                "rust"
            ],
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },

        {
            "name": "Config Setter - Local Storage",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/ffplayout",
            "args": [
                "-i",
                "-u",
                "admin",
                "-p",
                "admin",
                "-m",
                "contact@example.com",
                "--storage",
                "./media",
                "--playlists",
                "./playlists",
                "--public",
                "./public",
                "--logs",
                "./logging"
            ],
            "cwd": "${workspaceFolder}/target/debug/",
            "sourceLanguages": [
                "rust"
            ],
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
    ]
}